@using News.Areas.Admin.Models
@model User

<div class="text-danger" asp-validation-summary="All"></div>
<form asp-controller="User" asp-action="Edit" method="post">
    <input type="hidden" value="@Model.Id" name="id" />
    <div class="form-group">
        <label asp-for="FirstName">نام</label>
        <input type="text" asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LastName">نام خانوادگی</label>
        <input type="text" asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="UserName">نام کاربری</label>
        <input type="text" asp-for="UserName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">شماره تماس</label>
        <input type="text" asp-for="PhoneNumber" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">رمز عبور</label>
        <input type="text" asp-for="Password" class="form-control">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
